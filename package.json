{
  "name": "thinkboard",
  "version": "1.0.0",
  "description": "A full-stack note-taking application",
  "private": true,
  "scripts": {
    "install:backend": "cd backend && yarn install",
    "install:frontend": "cd frontend && yarn install",
    "install:all": "cd backend && yarn install && cd ../frontend && yarn install",
    "build:frontend": "cd frontend && yarn build",
    "build:backend": "cd backend && yarn build",
    "build": "cd backend && yarn install && cd ../frontend && yarn install && yarn build && cd ../backend && yarn build",
    "start": "cd backend && NODE_ENV=prod node dist/index.js",
    "dev:backend": "cd backend && yarn dev",
    "dev:frontend": "cd frontend && yarn dev"
  }
}
